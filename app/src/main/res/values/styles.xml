<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name= "android:textViewStyle" > @style/NunitoTextViewStyle </item>
        <item name= "android:buttonStyle" > @style/NavigationView </item>
        <item name= "android:editTextStyle" > @style/EditView </item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Hyperlink">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/underline</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="spinner_style">

        <item name="android:dropDownSelector">@color/colorBlue</item>

    </style>

    <style name= "NunitoTextViewStyle" parent= "android:Widget.TextView" >
        <item name= "android:fontFamily" > @font/nunito_sans</item>
    </style>
    <style name="NavigationView" parent="android:Widget.Holo.Button">
        <item name="fontFamily">@font/nunito_sans</item>
    </style>
    <style name="EditView" parent="android:Widget.EditText">
        <item name="fontFamily">@font/nunito_sans</item>
    </style>
</resources>
