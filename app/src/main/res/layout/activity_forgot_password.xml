<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_battery"
            android:layout_height="wrap_content">
        </ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_cellular"
            android:layout_height="wrap_content">
        </ImageView>
        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_wifi"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30pm"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"

            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="97dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textColor="#202F32"
            android:textSize="43sp"
            android:textStyle="normal"

            android:paddingRight="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginRight="80dp"
            android:lineHeight="25dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed "
            />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:gravity="start"
            android:layout_marginTop="33dp"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_message"
            android:drawablePadding="15dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/averia_gruesa_libre"
            android:textAllCaps="false"
            android:text="Submit"
            android:background="@color/colorBlue"
            android:textColor="#ffffff"
            android:layout_marginTop="49dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="172dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have an already existing account?"
                android:textStyle="normal"

                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/text1"
                android:text="@string/text_underlined"
                android:paddingLeft="40dp"

                android:textColor="#202F32"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_toRightOf="@id/text1" />




        </RelativeLayout>

    </LinearLayout>

</LinearLayout>